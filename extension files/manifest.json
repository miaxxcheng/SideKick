{
    "name": "Sidekick",
    "version": "1.0.0",
    "description": "A built-in writing companion.",
    "manifest_version": 3,
    "author": "Mia Cheng, Arianna Montas, Aditi Ram, Lucas Saidenberg",
    "key": "",
    "action": {
      "default_icon": "icon/sidekick.png",
      "default_title": "Sidekick",
      "default_popup": "setup.html" 
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "identity"
    ],
    "host_permissions": [
      "*://*.google.com/docs/*",
      "*://*.microsoft.com/word/*",
      "https://docs.googleapis.com/"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.google.com/docs/*",
          "*://*.microsoft.com/word/*",
          "https://docs.google.com/document/d/*"
        ],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*", "scripts/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "commands": {
      "toggle-suggestions": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Toggle AI Suggestions"
      }
    },
    "oauth2": {
      "client_id": "292573385770-pc045jsni7e6bph071pn4j3dbq37tbcj.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    }
}  