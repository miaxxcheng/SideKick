{
    "name": "Sidekick",
    "version": "1.0.0",
    "description": "A built-in writing companion.",
    "manifest_version": 3,
    "author": "Mia Cheng, Arianna Montas, Aditi Ram, Lucas Saidenberg",
    "action":{
        "default_popup": "index.html",
        "default_title": "Sidekick",
        "default_icon": "icons/sidekick.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "default_pop": "popup.html",
    
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "*://*.google.com/docs/*",
      "*://*.microsoft.com/word/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.google.com/docs/*",
          "*://*.microsoft.com/word/*"
        ],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*", "scripts/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "commands": {
      "toggle-suggestions": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Toggle AI Suggestions"
      }
    }
}